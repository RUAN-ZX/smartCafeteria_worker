.iconfont {
  font-family: "iconfont" !important;
  font-size: normal;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.background {
  height: 1700rpx;
  width: 750rpx;
  position: fixed;
  background-color: var(--bgColor);
  z-index: -1;
}
.content {
  transition: 0.3s opacity ease-out;
  overflow: hidden;
}
.content .header {
  position: relative;
  padding: 10px;
  width: 100%;
  background-color: var(--themeColor);
}
.content .header .text {
  color: var(--bgColor);
  font-size: 20px;
}
.content .header .text .years {
  display: inline;
  padding: 0px 6px 2px 6px;
  border: 2px solid;
  font-size: 18px;
  border-radius: 2px;
}
.content .index_wrapper {
  position: relative;
  padding: 10px;
  z-index: 0;
}
.content .index_wrapper .achievement {
  background-color: var(--cardColor);
  box-shadow: 6rpx 6rpx 15rpx 3rpx rgba(0, 0, 0, 0.21);
  border-radius: 15rpx;
  z-index: 1;
  position: relative;
  min-height: 200rpx;
  width: 100%;
  padding: 10rpx 20rpx 20rpx 20rpx;
}
.content .index_wrapper .achievement .label {
  font-size: 40rpx;
  font-weight: bolder;
}
.content .index_wrapper .achievement .label .text {
  font-size: 20rpx;
  text-align: right;
  color: var(--labelColor);
}
.content .index_wrapper .achievement .label .participate {
  font-size: 20rpx;
  text-align: right;
  font-weight: bold;
  color: var(--themeColor);
}
.content .index_wrapper .achievement .content {
  margin-top: 20rpx;
}
.content .index_wrapper .achievement .content .items_wrapper {
  flex: 5;
  display: flex;
  flex-direction: row;
  text-align: center;
}
.content .index_wrapper .achievement .content .items_wrapper .items {
  flex: 1;
  border-left: 1.1px solid var(--lineColor);
  border-right: 1.1px solid var(--lineColor);
}
.content .index_wrapper .achievement .content .items_wrapper .items .item_iconfont {
  font-size: 120rpx;
}
.content .index_wrapper .achievement .content .items_wrapper .items .name {
  margin-top: -20rpx;
  font-size: 25rpx;
  margin-bottom: 20rpx;
}
.content .index_wrapper .achievement .content .items_wrapper .items .value {
  font-size: 80rpx;
  color: var(--themeColor);
  font-weight: bolder;
  font-family: 'STXinwei', Courier, monospace;
}
.content .index_wrapper .achievement .content .info {
  font-size: 25rpx;
  margin-top: 10rpx;
  flex: 1;
}
.content .index_wrapper .achievement .content .info .value {
  color: var(--themeColor);
}
.content .choice {
  z-index: 5;
  position: fixed;
  padding-top: 10px;
  width: 100vw;
  display: block;
  background-color: var(--cardColor);
  transition: 0.5s ease-out;
  justify-content: center;
  display: grid;
  grid-template-columns: repeat(3, 195rpx);
  grid-template-rows: repeat(4, 97rpx);
  grid-row-gap: 10rpx;
  grid-column-gap: 39rpx;
  border-bottom: 1px solid var(--lineColor);
  box-shadow: 6rpx 6rpx 15rpx 3rpx rgba(0, 0, 0, 0.21);
}
.content .choice .title {
  background-color: var(--unfocusBtnColor);
  height: 30px;
  font-size: 15px;
  line-height: 30px;
  text-align: center;
  border-radius: 5px;
  transition: 0.2s ease-out;
}
.content .choice .active {
  border: 1.5px solid var(--themeColor);
  background-color: var(--bgColor);
}
.content .choice_hide {
  display: none;
}
.content .shield {
  height: 1700rpx;
  width: 750rpx;
  position: fixed;
  background-color: var(--bgColor);
}
