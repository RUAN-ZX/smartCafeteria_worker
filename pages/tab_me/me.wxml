<!-- 已经登陆的 -->
<view class="background"></view>

<!-- 3:2 -->
<view class="header">
    <image class="imageHeader" src="../../jpg/me.jpg" mode="scaleToFill" lazy-load="true">
        
    </image>
    <view class="user">
        
        <!-- <image  src="../../jpg/avatarDefault.jpg" mode="scaleToFill" lazy-load="true"> -->
        <view class="avatar">
            <open-data type="userAvatarUrl"></open-data>
        </view>
            
        <!-- </image> -->
        <!-- <view class="name"> -->
        <open-data class="name" type="userNickName"></open-data>
        
    </view>
    



</view>

<view class="card card_1">
        <view 
            wx:for="{{list_card1}}" 
            class="div_wrapper_1"
            wx:key="index"
            data-index="{{index}}"
            bindtap = "btnTap"
            >
            <span class="div_1_iconfont iconfont {{item.src}}"></span>
            <view class="div_text_1">{{item.text}}</view>
            
        </view>

</view>



<view class="card card_2">
    <view 
        class="item"
        wx:for="{{list_card2}}"
        wx:key="index">
            <span class="item_iconfont iconfont {{item.src}}"></span>
            <view class="name">
                {{item.name}}
            </view>
            <view class="description">
                {{item.description}}
                <span class="description_icon iconfont icon-arrow">
                </span>  
            </view>
    </view>
</view>